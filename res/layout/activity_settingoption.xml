<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xinbo.demo.SettingActivity" >

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:textColor="#000000"
                    android:text="常规"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView01"
                    android:background="#C0C0C0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_lixianxiazai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:textColor="#4F4F4F"
                    android:text="自动离线下载"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView1"
                    android:text="仅 Wi-Fi 下可用，自动下载最新内容" />

                <CheckBox
                    android:id="@+id/cb_lixianxiazai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="6dp"
                    android:background="#C0C0C0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_nopic"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:text="无图模式"
                    android:textColor="#4F4F4F"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView11"
                    android:text="2G/3G 网络下不下载图片" />

                <CheckBox
                    android:id="@+id/cb_nopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="6dp"
                    android:background="#C0C0C0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bigtext"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp" >

                <CheckBox
                    android:id="@+id/check_bigtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="大字号"
                    android:textColor="#4F4F4F"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/tv_qita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:textColor="#000000"
                    android:text="其他"
                    
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/tv_xian4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_qita"
                    android:background="#C0C0C0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_tuisongxiaoxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/tv_tuisongxiaoxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="6dp"
                    android:text="推送消息"
                    android:textColor="#4F4F4F"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <CheckBox
                    android:id="@+id/cb_tuisongxiaoxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_xian5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_tuisongxiaoxi"
                    android:layout_marginTop="16dp"
                    android:background="#C0C0C0" />
            </RelativeLayout>
            
            <RelativeLayout 
                android:id="@+id/layout_fenxiangweibo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp" 
    >
     <TextView
        android:id="@+id/tv_fenxiangweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="点评分享微博"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      <CheckBox
        android:id="@+id/cb_fenxiangweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
       <TextView
        android:id="@+id/tv_xian6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="#C0C0C0"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_fenxiangweibo"
         />


      </RelativeLayout>
      
            <RelativeLayout 
                android:id="@+id/layout_qingchuhuancun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp" 
    >
     <TextView
        android:id="@+id/tv_qingchuhuancun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="清除缓存"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
       <TextView
        android:id="@+id/tv_xian7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="#C0C0C0"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_qingchuhuancun"
         />

       <TextView
           android:id="@+id/tv_kb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/tv_qingchuhuancun"
           android:layout_alignParentRight="true"
           android:text="0kb" />

         </RelativeLayout>
         
            <RelativeLayout 
                android:id="@+id/layout_jianchagengengxin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp" 
    >

  

     <TextView
        android:id="@+id/tv_jiancegengxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="检查更新"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
       <TextView
        android:id="@+id/tv_xian8"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="#C0C0C0"
        android:layout_alignLeft="@+id/tv_banbenhao"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_banbenhao"
         />

       <TextView
           android:id="@+id/tv_banbenhao"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/tv_jiancegengxin"
           android:layout_below="@+id/tv_jiancegengxin"
           android:text="版本 ：2.5.3(390)" />

            </RelativeLayout>
            
            <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp">

    <TextView
        android:id="@+id/tv_fankui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:text="反馈"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_xian9"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentLeft="true"
        android:background="#C0C0C0"
        android:layout_below="@+id/tv_fankui" />

</RelativeLayout>
            <RelativeLayout 
                android:id="@+id/layout_yijianfankui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp" 
    >
     <TextView
        android:id="@+id/tv_yijianfankui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="意见反馈"
        android:textColor="#4F4F4F"
        android:layout_marginBottom="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
       <TextView
        android:id="@+id/tv_xian10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="#C0C0C0"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_yijianfankui"
         />


      </RelativeLayout>
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>